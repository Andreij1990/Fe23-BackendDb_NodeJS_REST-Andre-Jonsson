<% layout('layout', { title: 'studentCourses' }) %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
      <tr>
        <td><a href="/courses/id/<%= course.id %>/students"><%= course.id %></a></td>
        <td><a href="/courses/name/<%= course.name %>/students"><%= course.name %></a></td>
        <td><%= course.description %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
